@{
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Admin/Login/Login");
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/cssBE")
    @Scripts.Render("~/bundles/modernizrBE")
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    @*<script src="~/Scripts/modernizr-2.8.3.js"></script>*@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Sản phẩm", "Index", "Items", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Danh mục", "Index", "DanhMucs", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Danh mục con", "Index", "DanhMucCons", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Báo giá", "Index", "BaoGias", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Banner", "Index", "Baners", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("đổi mật khẩu", "changePass", "Items", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Đoàn Ngọc Điệp</p>
        </footer>
    </div>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>*@
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>